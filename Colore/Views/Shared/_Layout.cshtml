<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Colore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">     
            <!-----Login----->
            <div class="container-fluid">
                <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">  
                    @{bool logado = false;}   
                    @if (logado){
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="curriculo" asp-action="Curriculo">Curriculo</a>
                             </li>
                            <li class="nav-item">
                                <a id="manage" class="nav-link" asp-area="Identity" asp-controller="Acesso" title="Manage">Olá, Usuario.nome !</a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Acesso/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link">Sair</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " id="register" asp-controller="Acesso" asp-page="Create">Cadastro</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " id="login"  asp-controller="Acesso" asp-page="Login">Login</a>
                            </li>
                        }
                     </ul>
                </div>
            </div>
            <!-----Fim do Login----->

            <!-----Items----->
            <div class="container-fluid mx-auto order-0">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vaga" asp-action="Index">Vagas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Empresa" asp-action="Index">Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-----Fim dos Items----->

            <!-----Redes Sociais----->
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ms-auto">
                    <div class="social-part">
                        <a href="#"><img src="~/images/facebook.png" class="img-thumbnail"></a>
                        <a href="#"><img src="~/images/instagram.png" class="img-thumbnail"></a>
                        <a href="#"><img src="~/images/twitter.png" class="img-thumbnail"></a>
                    </div>
                </ul>
            </div>
            <!-----Fim Redes Sociais----->
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Colore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
