@model IEnumerable<Colore.Models.Vaga>

@{
    ViewData["Title"] = "Vagas";
}

<section id="search-jobs">
    <div class="container text-center">
        <div class="standardBG ">
        <h3>Encontre sua vaga</h3>
        </div>
        <hr/>
        @using (Html.BeginForm()){
        <div>
            <label>Procure por área ou escolaridade:</label>
        <label>@Html.TextBox("busca")</label>
        </div>
        <input type="submit" value="Pesquisar" class="btn btn-dark"/>
        }
    </div>
    <hr />
    <div class="text-center standardBG ">
        <h3>Vagas Recentes</h3>
        </div>
    </section>
    <section id="recent-jobs" class="d-flex align-items-center">
                @foreach (var item in Model) {
                <div class="col-sm-12 col-md-6 col-lg-4 mx-auto">
                    <div class="card text-center my-3" style="max-height:400px;">
                        <div class="card-header">
                             @Html.DisplayFor(modelItem => item.requisitos.area)
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"> @Html.DisplayFor(modelItem => item.titulo)</h4>
                            <h4 class="card-title"> Escolaridade: @Html.DisplayFor(modelItem => item.requisitos.escolaridade)</h4>
                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.cargo)</h5>
                            <h5 class="card-text"> Salario Mensal - R$ @item.salario </h5>
                            <h6>@item.beneficios</h6>                            
                            <p class="card-text"> @item.descricao </p>
                            <a asp-action="Details" asp-route-id="@item.id"  class="btn btn-outline-dark" type="button">Me Candidatar</a>
                        </div>
                        <div class="card-footer text-muted">
                           <p class="card-text"> Inscrição até @item.dataFinalInscricao </p>
                        </div>
                    </div>
                </div>
               }
    </section>